<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.ymans.flappybird.GameView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#020A3A"
        android:textSize="50sp"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start"
        android:padding="5dp"
        android:text="Start Meetkumar"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/r1_game_over"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_game_over"
            android:text="Game Over"
            android:textColor="#FF0000"
            android:textSize="50sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txt_score_over"
            android:textSize="100sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#FF0000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_best_score"
            android:text="Best: 0"
            android:textColor="#FF0000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_game_over"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_touch"
            android:text="Touch to Play Again"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txt_game_over"
            android:textColor="#831F00"
            />

    </RelativeLayout>

</RelativeLayout>